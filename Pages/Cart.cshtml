@page
@model BookApp.Pages.CartModel
@{
    ViewData["Title"] = "Book Store";
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th class="text-right">Price</th>
            <th>Subtotal</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var line in Model.Cart.Lines)
            {
                <tr>
                    <td class="text-left">@line.Book.Title</td>
                    <td class="text-right">@line.Quantity</td>
                    <td class="text-right">@((line.Book.Price).ToString("c"))</td>
                    <td class="text-right">@((line.Quantity * line.Book.Price).ToString("c"))</td>
                    <td>
                        <form id="@line.Book.BookId" asp-page-handler="Delete" method="post">
                            <input type="hidden" name="BookId" value="@line.Book.BookId" />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                            <span class="card-text p-1">
                                <button type="submit" class="btn-danger btn-sm pull-right" style="float:right">
                                    Remove
                                </button>
                            </span>
                        </form>
                    </td>
                </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.Cart.ComputeTotalSum().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>